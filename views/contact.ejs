<div class="row">
    <div class="col-md-12">
        <h1>Contact Lists</h1>
        <p>Here all list of the contacts</p>
        <hr>
        
        <a href="/contact/add" class="btn btn-sm btn-primary my-2">Add Contact</a>

        <% if(msg.length !== 0) { %>
          <div class="alert alert-success" role="alert">
            <%= msg %>
          </div>
        <% } %>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if(contacts.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">Data Empty</td>
                </tr>
              <% } else { %>
                <% contacts.forEach((contact, index) => { %>
                  <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= contact.nama %></td>
                      <td><%= contact.phone %></td>
                      <td><%= contact.email %></td>
                      <td>
                          <a href="/contact/<%= contact.nama %>" class="btn btn-sm btn-primary"><i class="bi bi-info-circle-fill"></i> Details</a>
                      </td>
                    </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
    </div>
</div>