<div class="row">
    <div class="col-md-8">
        <h2>Detail Contact</h2>
        <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
                Data Contact Tidak Ada <a href="/contact" class="alert-link">Kembali ke Daftar Contact</a>
            </div>
        <% } else { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure wanna delete this data?');">Delete</a>
                    <a href="/contact" class="card-link d-block mt-3">Back to Home</a>
                </div>
            </div>
        <% } %>
    </div>
</div>